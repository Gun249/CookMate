<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gunner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Gunner.Views"
    xmlns:localtwo="clr-namespace:Gunner.AccountPage"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate localtwo:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Signup"
        ContentTemplate="{DataTemplate localtwo:SignupPage}"
        Route="SignupPage" />
    
    <ShellContent
        Title="ForgotPassword"
        ContentTemplate="{DataTemplate localtwo:ForgotPasswordPage}"
        Route="ForgotPasswordPage" />

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
